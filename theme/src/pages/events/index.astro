---
import { parse, isBefore } from 'date-fns';
import {
	Container,
	TextCardSection,
	BlogPostsList,
	Button,
} from '@littlesticks/odyssey-theme-components';
import { Icon } from 'astro-icon';
import Layout from '../../layouts/Page.astro';

const posts = await Astro.glob('./posts/*.mdx').then(posts =>
	posts
		.map(({ frontmatter, url }) => ({
			title: frontmatter.title,
			description: frontmatter.description,
			authors: frontmatter.authors,
			publishDate: parse(frontmatter.publishDate, 'MMMM d, yyyy', new Date()),
			featuredImage: frontmatter.featuredImage,
			excerpt: frontmatter.excerpt,
			href: url,
		}))
		.sort((a, b) => {
			if (isBefore(a.publishDate, b.publishDate)) return 1;
			if (isBefore(b.publishDate, a.publishDate)) return -1;
			return 0;
		})
);

const seo = {
	title: 'Events | The Dragons',
	description: 'Events page for the Dragons',
};
---

<Layout {seo}>
	<Container>
		<TextCardSection>
			<h1>Dragon Events</h1>
			<p>
				Subscribe to a newsletter to stay up to date with events!
			</p>
			<div class="hero-btns__container">
					<Button href="https://events.ashric.us" customIcon
						>Subscribe
            <Fragment slot="icon">
              <Icon name="ic:baseline-chevron-right"/>
            </Fragment>
            </Button
					>
					<Button href="/theme/style-guide" unelevated>Style Guide</Button>
				</div>
		</TextCardSection>
		<section class="blog-posts-list__section">
			<h2>Recent Events</h2>
			<BlogPostsList posts={posts} />
		</section>
	</Container>
</Layout>

<style>
	.blog-posts-list__section {
		margin: var(--section-margin) auto;
	}
</style>
